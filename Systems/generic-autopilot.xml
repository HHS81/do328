<?xml version="1.0" encoding="UTF-8"?>
<PropertyList>

    <logic>
       <name>FD bars</name>
       <input>
         <and>
           <property>autopilot/locks/FD-status</property>
           <or>
             <not>
               <equals>
                 <property>/autopilot/locks/heading</property>
                 <value>ROLL</value>
               </equals>
             </not>
             <not>
               <equals>
                 <property>/autopilot/locks/altitude</property>
                 <value>PTCH</value>
               </equals>
             </not>
           </or>
         </and>
       </input>
       <output>autopilot/internal/show-bars</output>
    </logic>

    <!-- =============================================================== -->
    <!-- Roll Axis Modes                                                 -->
    <!-- =============================================================== -->
    <!-- Wing leveler -->
    <pid-controller>
        <name>Wing Leveler (Turn Coordinator based)</name>
        <debug>false</debug>
        <enable>
            <prop>autopilot/locks/heading</prop>
            <value>ROLL</value>
        </enable>
        <input>
            <prop>instrumentation/turn-indicator/indicated-turn-rate</prop>
        </input>
        <reference>
            <value>0.0</value>
        </reference>
        <output>
            <prop>autopilot/internal/target-roll-deg</prop>
        </output>
        <config>
            <Kp>0.5</Kp>
            <beta>1.0</beta>
            <alpha>0.1</alpha>
            <gamma>0.0</gamma>
            <Ti>10.0</Ti>
            <Td>0.00001</Td>
            <u_min>-1.0</u_min>
            <u_max>1.0</u_max>
        </config>
    </pid-controller>

    <!-- Heading Bug Hold. -->
    <pid-controller>
        <name>Heading Bug Hold</name>
        <debug>false</debug>
        <enable>
            <prop>autopilot/locks/heading</prop>
            <value>HDG</value>
        </enable>
        <input>
            <prop>autopilot/internal/heading-bug-error-deg</prop>
        </input>
        <reference>
            <value>0.0</value>
        </reference>
        <output>
            <prop>autopilot/internal/target-roll-deg</prop>
        </output>
        <config>
            <Kp>-1.0</Kp>
            <beta>1.0</beta>
            <alpha>0.1</alpha>
            <gamma>0.0</gamma>
            <Ti>10.0</Ti>
            <Td>0.00001</Td>
            <u_min>-20.0</u_min>
            <u_max>20.0</u_max>
        </config>
    </pid-controller>

    <!-- True Heading hold. -->
    <pi-simple-controller>
        <name>LNAV1</name>
        <debug>false</debug>
        <enable>
            <prop>autopilot/locks/heading</prop>
            <value>LNAV</value>
        </enable>
        <input>
            <prop>autopilot/internal/true-heading-error-deg</prop>
        </input>
        <reference>
            <value>0.0</value>
        </reference>
        <output>
            <property>autopilot/internal/target-roll-deg</property>
        </output>
        <config>
            <Kp>-1.75</Kp>
            <Ki>0.0</Ki>
            <u_min>-20.0</u_min>
            <u_max>20.0</u_max>
        </config>
    </pi-simple-controller>

    <!-- Nav1 hold. -->
    <pi-simple-controller>
        <name>Nav1 Hold</name>
        <debug>false</debug>
        <enable>
            <prop>autopilot/locks/heading</prop>
            <value>LOC</value>
        </enable>
        <input>
            <prop>autopilot/internal/nav1-heading-error-deg</prop>
        </input>
        <reference>
            <value>0.0</value>
        </reference>
        <output>
            <prop>autopilot/internal/target-roll-deg</prop>
        </output>
        <config>
            <Kp>-1.75</Kp>
            <Ki>0.0</Ki>
            <u_min>-20.0</u_min>
            <u_max>20.0</u_max>
        </config>
    </pi-simple-controller>

    <!-- AP control -->
    <pi-simple-controller>
        <name>Aileron Control</name>
        <debug>false</debug>
        <enable>
            <property>autopilot/locks/AP-status</property>
        </enable>
        <input>
            <prop>orientation/roll-deg</prop>
        </input>
        <reference>
            <prop>autopilot/internal/target-roll-deg</prop>
        </reference>
        <output>
            <prop>controls/flight/aileron</prop>
        </output>
        <config>
            <Kp>0.02</Kp>
            <Ti>10</Ti>
            <Td>0.0</Td>
            <u_min>-1.0</u_min>
            <u_max>1.0</u_max>
        </config>
    </pi-simple-controller>

    <!-- =============================================================== -->
    <!-- Pitch Axis Modes                                                -->
    <!-- =============================================================== -->

    <!-- angle of attack hold -->
    <pi-simple-controller>
        <name>AOA hold</name>
        <debug>false</debug>
        <enable>
            <prop>autopilot/locks/altitude</prop>
            <value>aoa-hold</value>
        </enable>
        <input>
            <prop>orientation/alpha-deg</prop>
        </input>
        <reference>
            <prop>autopilot/settings/target-aoa-deg</prop>
        </reference>
        <output>
            <prop>autopilot/internal/target-pitch-deg</prop>
        </output>
        <config>
            <Kp>0.1</Kp>
            <Ki>0.03</Ki>
            <u_min>-10.0</u_min>
            <u_max>10.0</u_max>
        </config>
    </pi-simple-controller>

    <!-- Altitude hold. -->
    <pi-simple-controller>
        <name>Altitude Hold (Altimeter based) Stage 1</name>
        <debug>false</debug>
        <enable>
            <prop>autopilot/locks/altitude</prop>
            <value>ALT</value>
        </enable>
        <input>
            <prop>instrumentation/altimeter/indicated-altitude-ft</prop>
        </input>
        <reference>
            <prop>autopilot/settings/target-altitude-ft</prop>
        </reference>
        <output>
            <prop>autopilot/internal/target-pitch-deg</prop>
        </output>
        <config>
            <Kp>0.03</Kp>
            <Ki>0.0</Ki>
            <u_min>-5.0</u_min>
            <u_max>5.0</u_max>
        </config>
    </pi-simple-controller>

    <!-- AGL hold. -->
    <pi-simple-controller>
        <name>AGL Hold (Altimeter based) Stage 1</name>
        <debug>false</debug>
        <enable>
            <prop>autopilot/locks/altitude</prop>
            <value>agl-hold</value>
        </enable>
        <input>
            <prop>position/altitude-agl-ft</prop>
        </input>
        <reference>
            <prop>autopilot/settings/target-agl-ft</prop>
        </reference>
        <output>
            <prop>autopilot/internal/target-pitch-deg</prop>
        </output>
        <config>
            <Kp>0.1</Kp>
            <Ki>0.03</Ki>
            <u_min>-10.0</u_min>
            <u_max>10.0</u_max>
        </config>
    </pi-simple-controller>

    <!-- Glideslope hold. -->
    <pi-simple-controller>
        <name>Glideslop Hold</name>
        <debug>false</debug>
        <enable>
            <prop>autopilot/locks/altitude</prop>
            <value>GS</value>
        </enable>
        <input>
            <prop>velocities/vertical-speed-fps</prop>
        </input>
        <reference>
            <prop>instrumentation/nav[0]/gs-rate-of-climb</prop>
        </reference>
        <output>
            <prop>autopilot/internal/target-pitch-deg</prop>
        </output>
        <config>
            <Kp>0.1</Kp>
            <Ki>0.03</Ki>
            <u_min>-10.0</u_min>
            <u_max>10.0</u_max>
        </config>
    </pi-simple-controller>

    <!-- vertical speed hold -->
    <pi-simple-controller>
        <name>Vertical Speed Hold</name>
        <debug>false</debug>
        <enable>
            <prop>autopilot/locks/altitude</prop>
            <value>VS</value>
        </enable>
        <input>
            <prop>velocities/vertical-speed-fps</prop>
        </input>
        <reference>
            <prop>autopilot/settings/vertical-speed-fpm</prop>
            <scale>0.01667</scale>
        </reference>
        <output>
            <prop>autopilot/internal/target-pitch-deg</prop>
        </output>
        <config>
            <Kp>0.1</Kp>
            <Ki>0.05</Ki>
            <u_min>-10.0</u_min>
            <u_max>10.0</u_max>
        </config>
    </pi-simple-controller>

    <!-- ideal control -->
    <pid-controller>
        <name>Elevator Control</name>
        <debug>false</debug>
        <enable>
            <property>autopilot/locks/AP-status</property>
        </enable>
        <input>
            <prop>orientation/pitch-deg</prop>
        </input>
        <reference>
            <prop>autopilot/internal/target-pitch-deg</prop>
        </reference>
        <output>
            <prop>controls/flight/elevator-trim-ideal</prop>
        </output>
        <config>
            <Kp>-0.15</Kp>
            <beta>1.0</beta>
            <alpha>0.1</alpha>
            <gamma>0.0</gamma>
            <Ti>15</Ti>
            <Td>0.002</Td>
            <u_min>-1.0</u_min>
            <u_max>1.0</u_max>
        </config>
    </pid-controller>

    <!-- real control -->
    <filter>
        <name>Elevator Trim Slow Down</name>
        <type>noise-spike</type>
        <max-rate-of-change>0.1</max-rate-of-change>
        <debug>false</debug>
        <feedback-if-disabled>true</feedback-if-disabled>
        <initialize-to>output</initialize-to>
        <enable>
            <property>autopilot/locks/AP-status</property>
        </enable>
        <input>
            <property>controls/flight/elevator-trim-ideal</property>
        </input>
        <output>controls/flight/elevator-trim</output>
    </filter>

    <!-- =============================================================== -->
    <!-- Velocity Modes                                                  -->
    <!-- =============================================================== -->
    <!-- Auto throttle -->
    <pid-controller>
        <name>Auto Throttle (5 sec lookahead)</name>
        <debug>false</debug>
        <enable>
            <prop>autopilot/locks/speed</prop>
            <value>speed-with-throttle</value>
        </enable>
        <input>
            <!-- <prop>autopilot/internal/lookahead-5-sec-airspeed-kt</prop> -->
            <prop>velocities/airspeed-kt</prop>
        </input>
        <reference>
            <prop>autopilot/settings/target-speed-kt</prop>
        </reference>
        <output>
            <prop>controls/engines/engine[0]/throttle</prop>
            <prop>controls/engines/engine[1]/throttle</prop>
        </output>
        <config>
            <Kp>0.1</Kp>
            <beta>1.0</beta>
            <alpha>0.1</alpha>
            <gamma>0.0</gamma>
            <Ti>10.0</Ti>
            <Td>0.00001</Td>
            <u_min>0.0</u_min>
            <u_max>1.0</u_max>
        </config>
    </pid-controller>
</PropertyList>
