            <prop>/instrumentation/primus2000/sc840/nav2ptr</prop>
            <value>3</value>
        </enable>
        <input>
            <prop>orientation/heading-magnetic-deg</prop>
        </input>
        <reference>
            <prop>instrumentation/gps/wp/wp[1]/bearing-mag-deg</prop>
