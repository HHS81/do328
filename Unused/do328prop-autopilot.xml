            <Kp>0.015</Kp>
            <beta>1.0</beta>
            <alpha>0.1</alpha>
            <gamma>0.0</gamma>
            <Ti>10.0</Ti>
            <Td>0.1</Td>
            <min>-5</min>
            <max>20</max>
