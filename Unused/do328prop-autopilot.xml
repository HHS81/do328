      <prop>/instrumentation/nav[0]/gs-rate-of-climb-filtered</prop>
    </reference>
    <output>
            <prop>/autopilot/internal/pitch-filter</prop>
    </output>
    <config>
        <Kp>0.75</Kp>
        <Ki>0.0</Ki>
            <min>-20.0</min>
            <max>20.0</max>
        </config>
    </pi-simple-controller>

    <pid-controller>
