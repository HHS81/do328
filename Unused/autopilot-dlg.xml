<?xml version="1.0"?>

<PropertyList>
    <name>autopilot-dlg</name>
    <layout>vbox</layout>

    <text>
        <label>Flight Director Active Modes</label>
        <halign>center</halign>
    </text>

<!-- Autopilot Locks Display-->

    <text>
        <label>    Lateral Arm     Lateral      Vertical    Vertical Arm</label>
        <halign>left</halign>
    </text>


    <frame>
        <width>300</width>
        <height>60</height>
        <halign>center</halign>


        <input>
            <x>15</x>
            <y>30</y>
            <width>70</width>
            <height>25</height>
            <border>2</border>
            <property>autopilot/locks/heading-arm</property>
            <live>true</live>
        </input>

        <input>
            <x>85</x>
            <y>30</y>
            <width>70</width>
            <height>25</height>
            <border>2</border>
            <property>autopilot/locks/heading</property>
            <live>true</live>
        </input>

        <input>
            <x>155</x>
            <y>30</y>
            <width>70</width>
            <height>25</height>
            <property>autopilot/locks/altitude</property>
            <live>true</live>
        </input>

        <input>
            <x>225</x>
            <y>30</y>
            <width>70</width>
            <height>25</height>
            <property>autopilot/locks/altitude-arm</property>
            <live>true</live>
        </input>

        <input>
            <x>15</x>
            <y>10</y>
            <width>50</width>
            <height>15</height>
            <label>Nav Src</label>
            <property>autopilot/settings/nav-source</property>
            <live>true</live>
            <binding>
                <command>dialog-update</command>
            </binding>
        </input>

        <checkbox>
            <x>130</x>
            <y>10</y>
            <width>14</width>
            <height>14</height>
            <label>B/C active</label>
            <property>instrumentation/nav/back-course-btn</property>
            <live>true</live>
            <binding>
                <command>dialog-update</command>
            </binding>
        </checkbox>

        <button>
            <x>225</x>
            <y>8</y>
            <width>35</width>
            <height>20</height>
            <legend>FMS</legend>
            <binding>
                <command>nasal</command>
                <script>do328.nav_src_set("fms");</script>
            </binding>
        </button>

        <button>
            <x>260</x>
            <y>8</y>
            <width>35</width>
            <height>20</height>
            <legend>NAV</legend>
            <binding>
                <command>nasal</command>
                <script>do328.nav_src_set("nav");</script>
            </binding>
        </button>

    </frame>

    <text>
        <label>Controls</label>
    </text>

